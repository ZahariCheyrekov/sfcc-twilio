<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">
    <field
        formid="phoneNumber"
        max-length="15"
        min-length="9"
        missing-error="error.message.required"
        range-error="error.message.phone.number.format"
        parse-error="error.message.phone.number.length"
        regexp="^(\+{1})?([0-9]+)(\s*[0-9+]+)$"
        value-error="ValueErrorText"
        type="string"
        mandatory="true"
    />
    <field
        formid="productSubscribeId"
        missing-error="error.message.required"
        type="string"
        mandatory="true"
    />
</form>
